# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                  @controllers.Application.index(path="/")

GET     /api/file                          @controllers.Files.list
PUT     /api/file                          @controllers.Files.create
PUT     /api/file/:site-:id/content              @controllers.Files.uploadContent(site:String, id: Int)
GET     /api/file/:site-:id                      @controllers.Files.getitem(site:String, id: Int)
PUT     /api/file/:site-:id                      @controllers.Files.update(site:String, id: Int)
DELETE  /api/file/:site-:id                      @controllers.Files.delete(site:String, id: Int)

GET     /api/storage                       @controllers.StoragesController.list
PUT     /api/storage                       @controllers.StoragesController.create
GET     /api/storage/knowntypes            @controllers.StoragesController.types
GET     /api/storage/:site-:id                   @controllers.StoragesController.getitem(site:String, id: Int)
PUT     /api/storage/:site-:id                   @controllers.StoragesController.update(site:String, id: Int)
DELETE  /api/storage/:site-:id                   @controllers.StoragesController.delete(site:String, id: Int)

GET     /api/template                      @controllers.ProjectTemplateController.list
PUT     /api/template                      @controllers.ProjectTemplateController.create
GET     /api/template/:site-:id                  @controllers.ProjectTemplateController.getitem(site:String, id: Int)
PUT     /api/template/:site-:id                  @controllers.ProjectTemplateController.update(site:String, id: Int)
DELETE  /api/template/:site-:id                  @controllers.ProjectTemplateController.delete(site:String, id: Int)

GET     /api/project                       @controllers.ProjectEntryController.list
PUT     /api/project                       @controllers.ProjectEntryController.create
#GET     /api/project/:id                   @controllers.ProjectEntryController.getitem(id: Int)
#PUT     /api/project/:id                   @controllers.ProjectEntryController.update(id: Int)
#DELETE  /api/project/:id                   @controllers.ProjectEntryController.delete(id: Int)

GET     /api/projecttype                   @controllers.ProjectTypeController.list
PUT     /api/projecttype                   @controllers.ProjectTypeController.create
GET     /api/projecttype/:site-:id               @controllers.ProjectTypeController.getitem(site:String, id: Int)
PUT     /api/projecttype/:site-:id               @controllers.ProjectTypeController.update(site:String, id: Int)
DELETE  /api/projecttype/:site-:id               @controllers.ProjectTypeController.delete(site:String, id: Int)

POST    /api/login                         @controllers.Application.authenticate
POST    /api/logout                        @controllers.Application.logout
GET     /api/isLoggedIn                    @controllers.Application.isLoggedIn
POST    /api/system/init                   @controllers.System.init

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /*tail                      @controllers.Application.index(tail)